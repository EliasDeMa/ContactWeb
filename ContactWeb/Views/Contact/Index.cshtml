@model IEnumerable<ContactIndexViewModel>

<h1>Contacts</h1>

@if (Model == null || !Model.Any())
{
    <p>No Contacts available.</p>
}
else
{
    <table cellpadding="2">
        <tr>
            <th colspan="3">Name</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.ToString()
                </td>
                <td>
                    <a asp-action="Detail"
                       asp-controller="Contact"
                       asp-route-id="@item.Id">
                        Details
                    </a>
                </td>
                <td>
                    <a asp-action="Edit"
                       asp-controller="Contact"
                       asp-route-id="@item.Id">
                        Edit
                    </a>
                </td>
            </tr>
        }
    </table>
}

<a asp-action="Create"
   asp-controller="Contact"
   class="btn btn-primary">
    Add Contact
</a>